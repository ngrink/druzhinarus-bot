generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum EventType {
  COMMON
  TRIP
}

model Event {
  id        Int       @id @default(autoincrement())
  type      EventType
  title     String
  startDate DateTime
  endDate   DateTime?
  link      String?
  isPublic  Boolean   @default(true)

  @@map("events")
}

model Question {
  id       Int    @id @default(autoincrement())
  question String
  answer   String

  @@map("questions")
}

model Quote {
  id     Int     @id @default(autoincrement())
  text   String
  author String?

  @@map("quotes")
}

model Verse {
  id     Int     @id @default(autoincrement())
  text   String
  author String?

  @@map("verses")
}
